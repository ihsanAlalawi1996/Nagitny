<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_design"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_127sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="@dimen/_127sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/credit_template" />

        <TextView
            android:id="@+id/credit_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:elevation="@dimen/_1sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="EXP:"
            android:textColor="@color/black"
            android:textStyle="bold"

             />

        <TextView
            android:id="@+id/credit_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:elevation="@dimen/_1sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Card holder"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

        <ImageView
            android:id="@+id/delete_card"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_100sdp"

            android:background="@drawable/delete_icon" />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/credit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:elevation="@dimen/_1sdp"
            android:fontFamily="serif-monospace"
            android:text="0000 0000 0000 0000"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>